{
  "name": "payment-gateway",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm --workspace @payment-gateway/api run dev",
    "build": "npm run --workspaces --if-present build",
    "test": "npm run --workspaces --if-present test",
    "lint": "npm run --workspaces --if-present lint",
    "prisma:generate": "npm --workspace @payment-gateway/persistence run prisma:generate",
    "prisma:migrate": "npm --workspace @payment-gateway/persistence run prisma:migrate",
    "seed:merchant": "tsx infra/scripts/seed-merchant.ts"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
